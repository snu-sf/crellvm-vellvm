
% Static Semantics of Static Single Assignment(SSA)

defns
Jwf_typ :: '' ::=
      defn
      |- typ :: :: wf_typ :: '' {{ com [[typ]] is well-formed }} by  

      -------------------- :: wf_typ_int
      |- int N

      -------------------- :: wf_typ_float
      |- float

      -------------------- :: wf_typ_double
      |- double

      -------------------- :: wf_typ_fp128
      |- fp128

      -------------------- :: wf_typ_void
      |- void

      -------------------- :: wf_typ_label
      |- label

      -------------------- :: wf_typ_metadate
      |- metadata

      -------------------- :: wf_typ_opaque
      |- opaque

      isValidReturnType typ     
      |- typ
      </ isValidArgumentType typj // j />
      </ |- typj // j /> 
      -------------------------------------------------- :: wf_typ_function
      |- typ ( </ typj // j /> ) 
     
      </ isValidElementType typj // j />
      </ |- typj // j /> 
      -------------------------------------------------- :: wf_typ_structure
      |- { </ typj // j /> }

      |- typ
      isValidElementType typ
      ------------------- :: wf_typ_array
      |- [ N * typ ]

      |- typ
      isValidElementType typ
      ------------------- :: wf_typ_pointer
      |- typ * 

      |- typ
      isValidElementType typ
      ------------------- :: wf_typ_vector
      |- < N * typ >

defns
Jtyping :: '' ::=
      defn
      module , fdef , block |- inst :: :: wf_inst :: '' 
      {{ com [[inst]] is well-formed w.r.t [[block]] in [[fdef]] in [[module]] }} by  

      getReturnType fdef = typ
      not typ == void
      ------------------------------------------------------ :: wf_inst_return
      module , fdef , block |- ret typ value

      getReturnType fdef = void
      ------------------------------------------------------ :: wf_inst_return_void
      module , fdef , block |- ret void


      ------------------------------------------------------ :: wf_inst_br
      module , fdef , block |- br value , ll1 , ll2				        

      defn
      module , fdef , block |- instl :: :: wf_instl :: ''
      {{ com [[instl]] is well-formed w.r.t [[block]] in [[fdef]] in [[module]] }} by  

      ------------------------ :: wf_instl_nil
      module , fdef , block |- []

      module , fdef , block |- inst 
      module , fdef , block |- instl
      ---------------------------------- :: wf_instl_cons
      module , fdef , block |- instl , inst


      defn
      module , fdef |- block :: :: wf_block :: '' 
      {{ com [[block]] is well-formed w.r.t. [[fdef]] in [[module]] }} by

      module , fdef , ll instl |- instl 
      instlChecksTerminatorInst instl
      instlStartsWithPhiNode instl
      ---------------------------------------- :: wf_block_intro
      module , fdef |- ll instl


      defn
      module , fdef |- blockl :: :: wf_blockl :: ''
      {{ com [[blockl]] is well-formed w.r.t. [[fdef]] in [[module]] }} by

      ------------------------ :: wf_blockl_nil
      module , fdef |- []

      module , fdef |- block
      module , fdef |- blockl
      ---------------------------------- :: wf_blockl_cons
      module , fdef |- blockl , block
 

      defn
      module |- fdef :: :: wf_fdef :: ''
      {{ com [[fdef]] is well-formed w.r.t. [[module]] }} by

      module , define fheader { blockl } |- blockl      
      ------------------------------------------------------ :: wf_fdef_intro
      module |- define fheader { blockl }

      defn
      |- module :: :: wf_module :: ''
      {{ com [[module]] is well-formed }} by 

      ------------------------ :: wf_module_nil
      |- nil

      |- module 
      ------------------------ :: wf_module_global_var
      |- module , g

      module |- fdef
      ------------------------ :: wf_module_function_def
      |- module , fdef   

      |- module
      ------------------------ :: wf_module_namedtype
      |- module , namedt     

