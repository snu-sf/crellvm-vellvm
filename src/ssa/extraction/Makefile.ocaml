OUTPUT_TYPE := byte
LLVM_LIB := /home/jianzhou/Tools/llvm-2.6/lib/
LLVM_OCAML_LIB := $(LLVM_LIB)/ocaml/

all: ssa_main

ssa_main: ssa_main.ml
	./fixextract.py
	ocamlbuild -j 2 -cflags -g,-I,$(LLVM_OCAML_LIB) -lflags -g,-I,$(LLVM_OCAML_LIB),-cclib,-L$(LLVM_LIB) ssa_main.$(OUTPUT_TYPE)

.PHONY: wc
wc:
	wc *.ml

.PHONY: clean
clean:
	ocamlbuild -clean

